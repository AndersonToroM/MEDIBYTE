@{ 
    string Prefix = "Incapacidades";
    string UrlClick = Url.Action("Edit", "Incapacidades");
    //string UrlNew = Url.Action("New", "Incapacidades"); 

    var DataGridConfig = new DataGridConfiguration<Incapacidades>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        //.New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true).SetStorage()
        .ToolbarTop(DApp.DefaultLanguage.GetResource("Incapacidades"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<Incapacidades>(DataGridConfig)
    .ID("IncapacidadesDataGrid")
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("Incapacidades").LoadAction("Get").Key("Id"))
    .Columns(columns =>
    {
            columns.AddFor(m => m.Fecha).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.FechaLista")).SortOrder(SortOrder.Desc);
            columns.AddFor(m => m.HIstoriasClinicas.Consecutivo).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.HistoriasClinicasConsecutivo"));
            columns.AddFor(m => m.NroOrden);
            columns.AddFor(m => m.Pacientes.NumeroIdentificacion).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.PacientesNumeroIdentificacion"));
            columns.AddFor(m => m.Pacientes.NombreCompleto).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.PacientesNombreCompleto"));
            columns.AddFor(m => m.Profesional.NombreCompleto).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.ProfesionalNombreCompleto"));
            columns.AddFor(m => m.FechaInicio);
            columns.AddFor(m => m.NroDias);
            columns.AddFor(m => m.Diagnosticos.Codigo).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.DiagnosticosCodigo"));
            columns.AddFor(m => m.Diagnosticos.Descripcion).Caption(DApp.DefaultLanguage.GetResource("Incapacidades.DiagnosticosDescripcion"));
    })
) 
</div> 
